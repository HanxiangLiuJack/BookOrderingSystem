<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="250dp"
    tools:context=".presentation.SingleBookActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/hisBookListID"
                android:layout_width="300dp"
                android:layout_height="46dp"
                android:text="1"
                android:textColor="#00000000"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="124dp" />

            <TextView
                android:id="@+id/hisBookListTitle"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginEnd="264dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="264dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:text="Hey hey hey"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hisBookListPrice"
                android:layout_width="186dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:text="$25.6"
                android:textColor="#b92646"
                android:textSize="22dp"
                app:layout_constraintStart_toEndOf="@+id/hisBookListTitle"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/hisBookListByAccount"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Sold by Xiao"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/hisBookListTitle"
                app:layout_constraintTop_toBottomOf="@+id/hisBookListPrice" />

            <TextView
                android:id="@+id/hisBookListAddress"
                android:layout_width="519dp"
                android:layout_height="100dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Address info"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hisBookListTitle" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>



</LinearLayout>