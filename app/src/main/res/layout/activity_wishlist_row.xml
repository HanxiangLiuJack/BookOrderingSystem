<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context=".presentation.SingleBookActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/wishListID"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:text="1"
                android:textColor="#00000000"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="124dp" />

            <TextView
                android:id="@+id/wishListTitle"
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:text="Hey hey hey"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/wishListByAuthor"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:text="By Xiao"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wishListTitle" />


            <TextView
                android:id="@+id/wisher"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="360dp"
                android:layout_marginTop="16dp"
                android:text="Wished by"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wishListTitle" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>



</LinearLayout>